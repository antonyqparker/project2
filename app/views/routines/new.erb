<h1 class="header">Create Routine</h1>

<section class="routine_background"></section>

<form class="form-inline" id="create_routine" method="post" action="/routines">

  <div class="row">
    <ul>
      <% @exercises.each do |exercise| %>
      <li class="col-lg-6">
        <ul class="card">
          <li class="image_list">
            <img class="img-thumbnail" src="<%= exercise.image_url%>">
            <h4 class="exercise_name"><%= exercise.name %></h4>
            <p class="exercise_difficulty"><%= exercise.difficulty %></p>
            <p id="descrip_colour" class="exercise_description hidden"><%= exercise.description %></p>
            <p class="exercise_youtube_url"><%= exercise.youtube_url %></p>
            <div class="selector">
              <input type="checkbox" class="selector" name="routine[exercise_ids][]" value="<%= exercise.id %>">
              <label for="selector"></label>
            </div>
          </li>
        </ul>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="container">

    <input name="routine[user_id]" value="<%= current_user.id %>" type="hidden"></input>

    <div class="">
      <label class="photo_style">Name</label><br>
      <input name="routine[name]" class="clear_text_box" placeholder="Routine Name">
    </div>

    <label class="photo_style">Difficulty</label><br>
    <div class="form-group">
      <select name="routine[difficulty]">
        <option value="easy" >Easy</option>
        <option value="medium">Medium</option>
        <option value="hard">Hard</option>
      </select>
    </div>

    <div class="">
      <label class="photo_style">Duration</label><br>
      <input name="routine[duration]" class="clear_text_box" placeholder="Duration(mins)">
    </div>
    <br>
    <div class="">
      <label class="photo_style">Description</label><br>
      <textarea name="routine[description]" class="clear_text_box" placeholder="Description"></textarea>
    </div>
    <br>
    <button type="submit" id="routine_creator" class="own-button"><font class="layout_font">Create Routine</font></button>

    </div>
</form>
