<h1 class="header">Routines</h1>
  <section class="routine_background"></section>
<a href="/routines/new" class="create_routine_button">Create new routine</a>
<div class="row">
    <ul class="list-group">
      <% @routines.each do |routine| %>
      <li class="col-lg-6">
        <ul class="card">
          <li class="routine_list">
            <li class="list-group-item">
              <a href="/routines/<%= routine.id %>" class="btn btn-default">View Routine</a>
                <p>Name: <%= routine.name %></p>
                <p>Difficulty: <%= routine.difficulty %></p>
                <p>Duration: <%= routine.duration %></p>
                <p>Description: <%= routine.description %></p>
                <% if routine.user %>
                <p>User: <%= routine.user.username %></p>
                <% if !routine.user.photo.url.nil? %>
                <img src="<%= routine.user.photo.url %>">
                <% end %>
              <% end %>
            </li>
              <button type="submit" class="btn btn-default"><a href="/routines/<%= routine.id %>/edit">Edit</a></button>
                <form method="post" action="/routines/<%= routine.id %>/delete"> 
                  <input type="hidden" name="_method" value="delete">
              <button type="submit" class="btn btn-default">Delete</button>
              </form>
            </li>
          </ul> 
        </li>         
      <% end %>
    </ul>